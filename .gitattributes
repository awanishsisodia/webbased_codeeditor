# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# HTML, CSS, JavaScript files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf
*.markdown text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.pyc binary

# Executable files
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Keep line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
